#!/usr/bin/env python

"""
Script fct_molecule_document
=============================
This script generates the molecule - document relationships file for a given input chunk.

It is actually the activity data of a given molecule.
"""
import argparse
from datetime import datetime
import sys
# data
import pandas as pd
# chemoinformatics
import rdkit
# dev
import npfc
from npfc import load
from npfc import save
from npfc import utils


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ FUNCTIONS ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #


def main():

    # init
    d0 = datetime.now()
    description = """Script for generating the molecule - documents relationships (fragment hits).
    One relationship type is supported:
        - mol -[PUBLISHED_IN]-> document


    In the future, I might actually differenciate relationships depending on document type:
        - PUBLISHED_IN
        - PATENTED_IN
        - DATASETED_IN

    Example:

        >>> fct_molecule_document fct/molecule/molecule.csv.gz fct/raw/document.csv.gz fct/molecule_document/data/molecule_document.csv.gz

    """

    # parameters CLI
    parser = argparse.ArgumentParser(description=description, formatter_class=argparse.ArgumentDefaultsHelpFormatter)
    parser.add_argument('input_molecule_document_table', type=str, default=None, help="The raw input molecule_document table for the corresponding dataset.")
    parser.add_argument('input_molecule_table', type=str, default=None, help="The input molecule table.")
    parser.add_argument('output_table', type=str, default=None, help="Output file with the fragment - molecule relationships.")
    parser.add_argument('--log', type=str, default='INFO', help="Specify level of logging. Possible values are: CRITICAL, ERROR, WARNING, INFO, DEBUG.")
    args = parser.parse_args()

    # logging
    logger = utils._configure_logger(args.log)
    logger.info("RUNNING FCT_MOLECULE_DOCUMENT")
    pad = 40

    # parse arguments
    utils.check_arg_input_file(args.input_molecule_document_table)
    utils.check_arg_input_file(args.input_molecule_table)
    utils.check_arg_output_file(args.output_table)

    # display infos

    # versions
    logger.info("LIBRARY VERSIONS:")
    logger.info("rdkit".ljust(pad) + f"{rdkit.__version__}")
    logger.info("pandas".ljust(pad) + f"{pd.__version__}")
    logger.info("npfc".ljust(pad) + f"{npfc.__version__}")
    # arguments
    logger.info("ARGUMENTS:")
    logger.info("INPUT_MOLECULE_DOCUMENT_TABLE".ljust(pad) + f"{args.input_molecule_document_table}")
    logger.info("INPUT_MOLECULE_TABLE".ljust(pad) + f"{args.input_molecule_table}")
    logger.info("OUTPUT_MOLECULE_DOCUMENT_TABLE".ljust(pad) + f"{args.output_table}")
    # log
    logger.info("LOG".ljust(pad) + f"{args.log}")

    # begin

    logger.info("BEGIN")
    d1 = datetime.now()

    # load inputs
    logger.info("LOADING INPUT FILES")
    df_molecule_document_raw = load.file(args.input_molecule_document_table)
    logger.info(f"LOADED {len(df_molecule_document_raw):,} MOLECULE-DOCUMENT RELATIONSHIPS")
    print(df_molecule_document_raw)
    df_molecule = load.file(args.input_molecule_table, decode=False)[['molecule_id']].groupby('molecule_id', as_index=False).first()
    logger.info(f"LOADED {len(df_molecule)} MOLECULE ENTRIES")
    d2 = datetime.now()

    # process data

    d3 = datetime.now()
    df_molecule_document = df_molecule_document_raw[df_molecule_document_raw['molecule_id'].isin(df_molecule['molecule_id'])]
    logger.info(f"REMAINING NUMBER OF MOLECULE-DOCUMENT RELATIONSHIPS: {len(df_molecule_document)}")
    logger.info(f"NUMBER OF MOLECULES WITH UNKNOWN DOCUMENTS: {len(df_molecule[~df_molecule['molecule_id'].isin(df_molecule_document_raw['molecule_id'])]):,}")
    logger.warning("MOLECULES WITH UNKOWN DOCUMENTS ARE NOT SAVED IN THIS TABLE!")
    # save file
    logger.info("SAVING OUTPUT")
    save.file(df_molecule_document, args.output_table)
    d4 = datetime.now()

    # end

    logger.info("SUMMARY")
    logger.info("COMPUTATIONAL TIME: CONFIGURING JOB".ljust(pad * 2) + f"{d1-d0}")
    logger.info("COMPUTATIONAL TIME: LOADING INPUTS".ljust(pad * 2) + f"{d2-d1}")
    logger.info("COMPUTATIONAL TIME: PROCESSING DATA".ljust(pad * 2) + f"{d3-d2}")
    logger.info("COMPUTATIONAL TIME: SAVING OUTPUT".ljust(pad * 2) + f"{d4-d3}")
    logger.info("COMPUTATIONAL TIME: TOTAL".ljust(pad * 2) + f"{d4-d0}")
    logger.info("END")
    sys.exit(0)

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ MAIN ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #


if __name__ == '__main__':
    main()
    sys.exit(0)
